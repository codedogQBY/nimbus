# ============== 数据库配置 ==============
DATABASE_URL="postgresql://nimbus:password@localhost:5432/nimbus?schema=public"

# ============== JWT 配置 ==============
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# ============== SMTP 邮件配置 ==============
# Gmail 示例
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@nimbus.com"

# QQ邮箱示例（注释）
# SMTP_HOST="smtp.qq.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-qq@qq.com"
# SMTP_PASSWORD="your-qq-auth-code"

# 163邮箱示例（注释）
# SMTP_HOST="smtp.163.com"
# SMTP_PORT="465"
# SMTP_SECURE="true"
# SMTP_USER="your-163@163.com"
# SMTP_PASSWORD="your-163-auth-code"

# ============== 应用配置 ==============
NODE_ENV="development"
PORT="3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============== 文件上传配置 ==============
MAX_FILE_SIZE="5368709120"  # 5GB (单位：字节)
ALLOWED_FILE_TYPES="*"       # * 表示允许所有类型

# ============== Owner 初始用户配置 ==============
# 首次运行时自动创建的Owner账号（可选）
INIT_OWNER_USERNAME="admin"
INIT_OWNER_EMAIL="admin@example.com"
INIT_OWNER_PASSWORD="Admin123456"  # 请修改为强密码

# ============== 存储源配置 ==============

# Cloudflare R2
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"

# 七牛云
QINIU_ACCESS_KEY=""
QINIU_SECRET_KEY=""
QINIU_BUCKET=""
QINIU_DOMAIN=""
QINIU_REGION="z0"  # z0=华东, z1=华北, z2=华南, na0=北美, as0=东南亚

# Telegram Bot
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHANNEL_ID=""  # 格式：@channelname 或 -100xxxxxxxxxx

# GitHub Repository
GITHUB_TOKEN=""
GITHUB_REPO="username/repo-name"
GITHUB_BRANCH="main"

# ============== Redis 配置（可选，用于缓存） ==============
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ============== 日志配置 ==============
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FILE="./logs/nimbus.log"

# ============== 安全配置 ==============
# 是否启用CORS
ENABLE_CORS="true"
ALLOWED_ORIGINS="http://localhost:3000"

# 速率限制
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX="100"        # 每个时间窗口的最大请求数
RATE_LIMIT_WINDOW="15m"     # 时间窗口

# ============== 开发配置 ==============
# Prisma 日志级别
PRISMA_LOG_LEVEL="query,error,warn"  # 生产环境建议只保留 error

# 是否启用调试模式
DEBUG="false"
