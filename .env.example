# ============== 数据库配置 ==============
DATABASE_URL="postgresql://nimbus:password@localhost:5432/nimbus?schema=public"

# ============== JWT 配置 ==============
JWT_SECRET="nimbus-super-secret-jwt-key-please-change-in-production-2024"
JWT_EXPIRES_IN="7d"

# ============== SMTP 邮件配置 ==============
# 开发环境可以先使用假的配置，后续需要真实邮箱才能验证
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@nimbus.com"

# ============== Owner 初始用户配置 ==============
INIT_OWNER_USERNAME="admin"
INIT_OWNER_EMAIL="admin@nimbus.com"
INIT_OWNER_PASSWORD="Admin@123456"

# ============== 应用配置 ==============
NODE_ENV="development"
PORT="8084"
NEXT_PUBLIC_APP_URL="http://localhost:8084"

# ============== 文件访问配置 ==============
# 是否启用直接URL访问（绕过服务器代理）
# 启用后，文件将直接从存储源CDN访问，提高性能但可能影响访问控制
ENABLE_DIRECT_URL="false"
